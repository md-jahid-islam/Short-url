<%- include("./particals/header.ejs") %>

        <form class="reg-log wrap">
            <h1 class="h1">Registration</h1>
            <input required type="text" name="fullname" placeholder="Enter your full name">
            <input required pattern="^([a-zA-Z0-9_\-\.]+)@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([a-zA-Z0-9\-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)$" placeholder="Email" id="email" name="email" type="text">
            <input required placeholder="Password" id="password" name="password" type="password">
            <input value="Login" class="btn" type="submit">
        </form>

